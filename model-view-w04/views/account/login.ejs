<h2><%- title %></h2>
<%- messages() %>
<div class="loginForm">
<form action="">
    <label for="emailId">Email:</label>
    <input type="email" id="emailId" name="account_email" required placeholder="Enter a valid email address">
    <label for="emailPassword">Password:</label>
    <input type="password" id="emailPassword" name="account_password" required>
    <input type="submit" value="Submit" id="btn">
</form>
<p>No account? <a href="http://localhost:5500/account/register">Sign-up</a></p>
</div>